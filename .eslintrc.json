{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "tsconfig.json",
    "tsconfigRootDir": "./",
    "sourceType": "module"
  },
  "plugins": ["prettier", "@typescript-eslint"],
  "extends": ["prettier", "plugin:prettier/recommended"],
  "root": true,
  "env": {
    "node": true,
    "jest": true
  },
  "ignorePatterns": [".eslintrc.js"],
  "rules": {
    "no-console": 1,
    "prettier/prettier": ["error", {
      "endOfLine":"auto"
    }]
  }
}